<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span>
          フォロー：
          <a href="<%= followings_path %>">
             <%= current_user.following_relationships.count %>
          </a>
        </span>
        <span>
          フォロワー：
          <a href="<%= followers_path %>">
            <%= current_user.follower_relationships.count %>
          </a>
        </span>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>